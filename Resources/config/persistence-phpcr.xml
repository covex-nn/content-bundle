<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="cmf_content.initializer" class="Doctrine\Bundle\PHPCRBundle\Initializer\GenericInitializer">
            <argument>CmfContentBundle</argument>
            <argument type="collection">
                <argument>%cmf_content.persistence.phpcr.content_basepath%</argument>
            </argument>
            <tag name="doctrine_phpcr.initializer"/>
        </service>

        <service id="cmf_content.model_manager" class="Symfony\Cmf\Bundle\ContentBundle\Doctrine\Phpcr\ModelManager">
            <argument type="service" id="doctrine_phpcr.odm.default_document_manager"/>
        </service>

    </services>

</container>
